{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "jquery": true
    },
    "plugins": [
        "prettier"
    ],
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-underscore-dangle": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-param-reassign": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-cond-assign": [
            "error",
            "except-parens"
        ]
    }
}